<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToOutline="true"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="144px"
        android:layout_height="144px"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150px"
        android:layout_marginEnd="60px"
        android:background="@drawable/setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="settings"/>

    <View
        android:id="@+id/profile_car"
        android:layout_width="960px"
        android:layout_height="570px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="270px"
        android:background="@drawable/activity_main_profilecar"/>

    <View
        android:id="@+id/view2"
        android:layout_width="900px"
        android:layout_height="165px"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/profile_car"
        android:layout_marginBottom="60px"
        android:background="@drawable/activity_main_view2" />

    <ImageButton
        android:id="@+id/quest1"
        android:layout_width="960px"
        android:layout_height="180px"
        android:layout_below="@+id/profile_car"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165px"
        android:background="@color/white"
        android:contentDescription="today_words"
        app:srcCompat="@drawable/activity_main_quest" />

    <ImageButton
        android:id="@+id/quest2"
        android:layout_width="960px"
        android:layout_height="180px"
        android:layout_below="@+id/quest1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:contentDescription="today_study"
        app:srcCompat="@drawable/activity_main_quest" />

    <Button
        android:id="@+id/quest1_button"
        android:layout_width="144px"
        android:layout_height="144px"
        android:layout_alignTop="@+id/quest1"
        android:layout_alignEnd="@+id/quest1"
        android:layout_marginTop="18px"
        android:layout_marginEnd="60px"
        android:background="@drawable/activity_main_button2"
        android:text="보상받기"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/quest2_button"
        android:layout_width="150px"
        android:layout_height="144px"
        android:layout_alignTop="@+id/quest2"
        android:layout_alignEnd="@+id/quest2"
        android:layout_marginTop="18px"
        android:layout_marginEnd="60px"
        android:background="@drawable/activity_main_button1"
        android:text="보상받기"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/quest2"
        android:layout_marginTop="90px">

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="465px"
            android:layout_height="750px"
            android:background="@color/white"
            android:contentDescription="btnCamera"
            app:srcCompat="@drawable/c" />

        <LinearLayout
            android:id="@+id/layout_study_dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="30px">

            <ImageButton
                android:id="@+id/btn_Study"
                android:layout_width="465px"
                android:layout_height="360px"
                android:background="@color/white"
                android:contentDescription="btn_Study"
                app:srcCompat="@drawable/c1" />

            <ImageButton
                android:id="@+id/btn_Dictionary"
                android:layout_width="465px"
                android:layout_height="360px"
                android:layout_marginTop="30px"
                android:background="@color/white"
                android:contentDescription="btn_Dictionary"
                app:srcCompat="@drawable/c2" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_car"
        android:layout_marginStart="15px"
        android:layout_marginTop="105px"
        android:layout_toStartOf="@+id/iv_profile"
        android:layout_toEndOf="@+id/hi"
        android:text="Nickname"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_car"
        android:layout_alignStart="@+id/profile_car"
        android:layout_marginLeft="54px"
        android:layout_marginTop="105px"
        android:text="Hi,"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_car"
        android:layout_alignStart="@+id/profile_car"
        android:layout_marginStart="54px"
        android:layout_marginBottom="285px"
        android:text="Welcome back!"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="240px"
        android:layout_height="240px"
        android:layout_alignTop="@+id/profile_car"
        android:layout_alignEnd="@+id/profile_car"
        android:layout_marginTop="54px"
        android:layout_marginEnd="54px"
        app:srcCompat="@drawable/p" />

    <ProgressBar
        android:id="@+id/progress_bar_exp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="840px"
        android:layout_height="30px"
        android:layout_alignTop="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84px"
        android:indeterminateDrawable="@drawable/progress_bar_exp"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_exp"
        tools:progress="0" />

    <TextView
        android:id="@+id/textView_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view2"
        android:layout_alignTop="@+id/view2"
        android:layout_marginStart="60px"
        android:layout_marginTop="21px"
        android:textSize="14sp"
        android:text="LV. 1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view2"
        android:layout_alignEnd="@+id/view2"
        android:layout_marginEnd="60px"
        android:layout_marginTop="21px"
        android:textSize="14sp"
        android:text="EXP 0 / 100" />

    <ImageView
        android:id="@+id/quest1_medal"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignTop="@+id/quest1"
        android:layout_alignStart="@+id/quest1"
        android:layout_marginTop="30px"
        android:layout_marginStart="30px"
        app:srcCompat="@drawable/medal6" />

    <ImageView
        android:id="@+id/quest2_medal"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignTop="@+id/quest2"
        android:layout_alignStart="@+id/quest2"
        android:layout_marginTop="30px"
        android:layout_marginStart="30px"
        app:srcCompat="@drawable/medal2" />

    <TextView
        android:id="@+id/quest1_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/quest1"
        android:layout_toEndOf="@+id/quest1_medal"
        android:layout_marginStart="30px"
        android:layout_marginTop="60px"
        android:textSize="14sp"
        android:text="새로운 단어 발견하기" />

    <TextView
        android:id="@+id/quest1_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/quest1"
        android:layout_toEndOf="@+id/quest1_detail"
        android:layout_marginTop="60px"
        android:layout_marginLeft="15px"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="(81/100)" />

    <TextView
        android:id="@+id/quest2_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/quest2"
        android:layout_toEndOf="@+id/quest2_medal"
        android:layout_marginStart="30px"
        android:layout_marginTop="60px"
        android:textSize="14sp"
        android:text="단어 학습 도전하기" />

    <TextView
        android:id="@+id/quest2_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/quest2"
        android:layout_toEndOf="@+id/quest2_detail"
        android:layout_marginTop="60px"
        android:layout_marginLeft="15px"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="(2/2)" />

    <TextView
        android:id="@+id/quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_car"
        android:layout_alignStart="@+id/quest1"
        android:layout_marginTop="75px"
        android:layout_marginStart="30px"
        android:text="오늘의 학습목표"
        android:textSize="20sp"
        android:textStyle="bold" />



</RelativeLayout>
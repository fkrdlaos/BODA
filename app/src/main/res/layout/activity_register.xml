<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/be3"
    android:clipToOutline="true"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/et_email"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_below="@+id/title_rg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150px"
        android:background="@drawable/activity_register_edittext"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingStart="54px"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="75px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/activity_register_edittext"
        android:hint="비밀번호"
        android:paddingStart="54px"
        android:textColorHint="#FFFFFF"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_below="@+id/et_confirm_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75px"
        android:background="@drawable/activity_register_edittext"
        android:hint="닉네임"
        android:paddingStart="54px"
        android:textColorHint="#FFFFFF"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_confirm_pwd"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_below="@+id/et_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75px"
        android:background="@drawable/activity_register_edittext"
        android:hint="비밀번호 확인"
        android:paddingStart="54px"
        android:textColorHint="#FFFFFF"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="200px"
        android:layout_height="150px"
        android:layout_alignTop="@+id/et_email"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0px"
        android:layout_marginEnd="125px"
        android:background="@drawable/activity_register_check"
        android:text="중복확인"
        android:textColor="#FF6F0F"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_below="@+id/et_nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:background="@drawable/activity_register_check"
        android:text="가입하기"
        android:textColor="#FF6F0F"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/back_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:contentDescription="back_button"/>

    <ImageView
        android:id="@+id/title_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="337px"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ti1" />


</RelativeLayout>
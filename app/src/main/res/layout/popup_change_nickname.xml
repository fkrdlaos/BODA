<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1050px"
    android:layout_height="600px"
    android:background="@drawable/popup_round"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="60px">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:text="닉네임 변경"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:layout_marginStart="30px"
        android:layout_marginEnd="30px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextNewNickname"
            android:layout_width="750px"
            android:layout_height="wrap_content"
            android:hint="새로운 닉네임을 입력하세요."
            android:maxLength="15"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/15"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancel"
            android:background="@drawable/popup_button1"
            android:layout_width="450px"
            android:layout_height="130px"
            android:layout_marginEnd="30px"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonConfirm"
            android:background="@drawable/popup_button2"
            android:layout_width="450px"
            android:layout_height="130px"
            android:layout_weight="1"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"            />

    </LinearLayout>

</LinearLayout>
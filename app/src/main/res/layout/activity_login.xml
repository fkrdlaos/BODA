<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="@drawable/be"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420px"
        app:srcCompat="@drawable/ti" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="800px"
        android:background="@drawable/activity_login_edittext"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textEmailAddress"
        android:paddingStart="45px"
        android:textColorHint="#FF6F0F" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1025px"
        android:paddingStart="45px"
        android:ems="10"
        android:hint="비밀번호"
        android:textColorHint="#FF6F0F"
        android:inputType="textPassword"
        android:background="@drawable/activity_login_edittext"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1350px"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/activity_login_button"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1560px"
        android:backgroundTint="#FF6F0F"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/activity_login_button"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_google"
        android:layout_width="840px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1920px"/>

</RelativeLayout>
